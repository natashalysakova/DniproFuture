@model DniproFuture.Models.GalleryModel

<div class="row customContainer">
    
    <hr />
    <h3>@ViewRes._HomeStrings.Gallery</h3>

    @for (int i = 0; i < Model.Photos.Count; i += 4)
    {
        <div class="row">
            @for (int j = 0; j < 4; j++)
            {
                if (i + j < Model.Photos.Count)
                {
                    <a href="@Url.Content("~/Content/img/" + Model.Type + "/" + Model.Photos[i + j])" data-toggle="lightbox" data-gallery="imagesizes" class="col-sm-3">
                        <img src="@Url.Content("~/Content/img/" + Model.Type + "/" + Model.Photos[i + j])" class="img-responsive img-thumbnail">
                    </a>
                }
            }
        </div>
    }
</div>
