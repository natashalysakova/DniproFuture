<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="backFlag">
                <a class="page-scroll" href="#page-top"><img class="logo navbar-brand" src="@Url.Content("~/Content/img/logo.png")" /></a>
            </div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="#helpNow">@ViewRes._HomeStrings.NavBarHelpNow</a>
                </li>
                <li>
                    <div class="btn-group">
                        <div type="button" class="dropdown-toggle dropdown-menu-main-button" data-toggle="dropdown" aria-expanded="false">
                            ДОПОМОГАІ <span class="caret"></span>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-main" role="menu">
                            @if (ViewBag.DonationCount > 0)
                            {
                                <li>
                                    <a class="page-scroll" href="#donation">@ViewRes._HomeStrings.NavBarDonation</a>
                                </li>
                            }
                            @if (ViewBag.ProjectsCount > 0)
                            {
                                <li>
                                    <a class="page-scroll" href="#projects">@ViewRes._HomeStrings.NavBarProjects</a>
                                </li>
                            }
                            @if (ViewBag.ClientsCount > 0)
                            {
                                <li>
                                    <a class="page-scroll" href="#clients">@ViewRes._HomeStrings.NavBarClients</a>
                                </li>
                            }
                        </ul>
                    </div>
                </li>
                <li>
                    <a class="page-scroll" href="#about">@ViewRes._HomeStrings.NavBarAbout</a>
                </li>
                @if (ViewBag.NewsCount > 0)
                {
                    <li>
                        <a class="page-scroll" href="#news">@ViewRes._HomeStrings.NavBarNews</a>
                    </li>
                }

                
                <li>
                    <a class="page-scroll" href="#how">@ViewRes._HomeStrings.NavBarHow</a>
                </li>
                <li>
                    <a class="page-scroll" href="#partners">@ViewRes._HomeStrings.NavBarPartners</a>
                </li>

                <li>
                    <a class="page-scroll" href="#contacts">@ViewRes._HomeStrings.NavBarContacts</a>
                </li>
            </ul>
        </div>
        <div id="languages">
            <a href="@Url.Action("ChangeCulture",new { lang = "uk", returnUrl = this.Request.RawUrl })">
                <img src="@Url.Content("~/Content/img/blank.gif")" class="flag flag-ua" alt="Українська" />
            </a><br/>
            <a href="@Url.Action("ChangeCulture",new { lang = "ru", returnUrl = this.Request.RawUrl })">
                <img src="@Url.Content("~/Content/img/blank.gif")" class="flag flag-ru" alt="Русский" />
            </a><br />
            <a href="@Url.Action("ChangeCulture",new { lang = "en", returnUrl = this.Request.RawUrl })">
                <img src="@Url.Content("~/Content/img/blank.gif")" class="flag flag-us" alt="English" />
            </a>
        </div>
    </div>
</nav>

