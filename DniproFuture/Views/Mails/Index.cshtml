@model System.Collections.Generic.IEnumerable<DniproFuture.Models.Mail>

@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_AdminLayout.cshtml";
}
<script>
    
</script>
<div class="container customContainer">
    <h2>Входящие</h2>

    <div class="btn btn-warning" onclick="location.href = '@Url.Action("ClearAll", "Mails")';">Очистить почту</div>
    
    <table class="table table-hover mail-table">
        <tr>
            <th>
                Имя
            </th>
            <th>
                E-mail
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Дата
            </th>
            <th></th>
        </tr>
        <tr class="messages">
            @foreach (var item in Model)
            {
                Html.RenderPartial(item.IsRead == false ? "UnreadMessage" : "ReadMessage", item);
            }
        </tr>
    </table>
</div>