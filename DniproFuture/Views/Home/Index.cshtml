@model DniproFuture.Models.OutputModels.MainPageModel

@{
    ViewBag.Title = "Admin: Login";
    Layout = "../Shared/_MainLayout.cshtml";
}

@{
    Html.RenderPartial("Header");
    Html.RenderPartial("HelpNow");
    
    if (ViewBag.DonationCount > 0)
    {
        Html.RenderPartial("Donation", Model.DonationBlock);
    }
    
    Html.RenderPartial("About");
    
    if (ViewBag.NewsCount > 0)
    {
        Html.RenderPartial("News", Model.NewsBlock);
    }
    if (ViewBag.ProjectsCount > 0)
    {
        Html.RenderPartial("Projects", Model.ProjectsBlock);
    }
    
    Html.RenderPartial("How");
    
    if (ViewBag.PartnersCount > 0)
    {
        Html.RenderPartial("Partners", Model.PartnersBlock);
    }   
    
    if (ViewBag.ClientsCount > 0) 
    {
        Html.RenderPartial("Clients", Model.ClientsBlock);
    }
    
    Html.RenderPartial("Contacts", Model.ContactsBlock);
}
