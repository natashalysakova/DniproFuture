@using System.Web.UI.WebControls
@using DniproFuture.Models
@using DniproFuture.Models.OutputModels
@model PartnersModel
<!-- Partners Section -->
<section id="partners" class="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@ViewRes._HomeStrings.PartnersTitle</h2>
            </div>
        </div>
        <div class="row">
            @if (ViewBag.PartnersCount == 1)
            {
                <div class="col-md-offset-5 col-md-2 col-sm-offset-5 col-sm-2 text-center">
                    <img src="@Url.Content("~/Content/img/Partners/" + Model.RandomPartners[0].Logo)" class="img-responsive text-muted  partner-member" alt="">
                    <div class="portfolio-caption">
                        <a href="@Model.RandomPartners[0].Link"><h4>@Model.RandomPartners[0].Title</h4></a>
                    </div>
                </div>
            }
            else if (ViewBag.PartnersCount == 2)
            {
                for (int i = 0; i < 2; i++)
                {
                    <div class="col-md-offset-4 col-md-2 col-sm-offset-4 col-sm-2 text-center">
                        <img src="@Url.Content("~/Content/img/Partners/" + Model.RandomPartners[i].Logo)" class="img-responsive text-muted  partner-member" alt="">
                        <div class="portfolio-caption">
                            <a href="@Model.RandomPartners[i].Link"><h4>@Model.RandomPartners[i].Title</h4></a>
                        </div>
                    </div>
                }
            }
            else if (ViewBag.PartnersCount == 3)
            {
                for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-offset-3 col-md-2 col-sm-offset-3 col-sm-2 text-center">
                        <img src="@Url.Content("~/Content/img/Partners/" + Model.RandomPartners[i].Logo)" class="img-responsive text-muted  partner-member" alt="">
                        <div class="portfolio-caption">
                            <a href="@Model.RandomPartners[i].Link"><h4>@Model.RandomPartners[i].Title</h4></a>
                        </div>
                    </div>
                }
            }
            else
            {
                foreach (PartnersOutputModel partners in Model.RandomPartners)
                {
                    <div class="col-md-offset-2 col-md-2 col-sm-4 portfolio-item">
                        <img src="@Url.Content("~/Content/img/Partners/" + partners.Logo)" class="img-responsive text-muted  partner-member" alt="">
                        <div class="portfolio-caption">
                            <a href="@partners.Link"><h4>@partners.Title</h4></a>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="row text-center">
            <div class="portfolio-link btn btn-xl" data-toggle="modal" href="#PartnersModal">
                @ViewRes._HomeStrings.PartnersAll
            </div>
        </div>
    </div>
</section>

<!-- Partners Modal -->
<div class="portfolio-modal modal fade" id="PartnersModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
            <div class="lr">
                <div class="rl">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="modal-body">
                    <!-- All Partners Go Here -->
                    <h2>@ViewRes._HomeStrings.PartnersAll</h2>
                    <!--<p class="item-intro text-muted">Lorem ipsum dolor sit amet consectetur.</p>-->
                    @for (int i = 0; i < Model.AllPartners.Length; i += 4)
                    {
                        <div class="row">
                            @for (int j = 0; j < 4; j++)
                            {
                                if (i + j < Model.AllPartners.Length)
                                {
                                    <a href="@Model.AllPartners[i+j].Link">
                                        <div class="col-md-3 col-sm-6 portfolio-item">
                                            <img class="img-responsive partner-member" src="@Url.Content("~/Content/img/Partners/" + Model.AllPartners[i+j].Logo)" alt="">
                                            <div class="portfolio-caption">
                                                <h4>@Model.AllPartners[i + j].Title</h4>

                                            </div>
                                        </div>
                                    </a>
                                }
                            }
                        </div>
                    }
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> @ViewRes._HomeStrings.HowModalBtn</button>
                </div>
            </div>
        </div>
    </div>
</div>